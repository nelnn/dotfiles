#!/bin/sh

# # Requires ffmpeg and yt-dlp

# [ -z "$1" ] && printf "You should specify the playlist or video id\n" && exit 1

echo "Enter the artists (separated by comma):"; read -r artist
echo "Enter the album (blank if single track):"; read -r album
echo "Enter the publication year:"; read -r year
echo "Enter the genre:"; read -r genre

# Download the playlist or track
yt-dlp --rm-cache-dir -x -o '%(playlist)s-%(playlist_index)s-%(title)s.%(ext)s' -P "$HOME/Music/temp" "https://www.youtube.com/playlist?list=$1" || yt-dlp --rm-cache-dir -x -o '%(title)s.%(ext)s' -P "$HOME/Music/temp" "https://www.youtube.com/watch?v=$1"

# Process each track in the temp directory
for track in "$HOME/Music/temp/"*; do
    title=${track##*/}
    title=${title%.*}
    filename="$(echo "$title" | iconv -c -f UTF-8 -t ASCII//TRANSLIT | sed 's/ - /-/g; s/ /-/g')"

    ext="${track##*.}"
    file="$HOME/Music/all/$filename.$ext"
    
    ffmpeg -i "$track" -nostdin -y \
        -metadata artist="$artist" \
        -metadata title="$title" \
        -metadata album="$album" \
        -metadata genre="$genre" \
        -metadata year="$year" \
        -vn -c:a copy "$file"
    
    rm "$track"
done

