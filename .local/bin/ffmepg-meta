#!/bin/sh
for track in *; do
    echo "Processing: $track"
    [ -f "$track" ] || continue
    base="${track%.*}"
    ext="${track##*.}"
    title="$base"
    output="${base}_new.${ext}"
    ffmpeg -i "$track" -nostdin -y \
        -c copy \
        -map_metadata -1 \
        -metadata artist="Karl Pilkington" \
        -metadata title="$title" \
        -metadata album="XFM Series 2" \
        "$output"
done
