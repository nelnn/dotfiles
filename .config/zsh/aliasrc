# aliases
alias vim="nvim"
alias vi="nvim"
alias ovi="vim"
alias ls='ls -G'
alias mv="mv -i"
alias cp="cp -i"
alias tm="tmux"
alias cd="z"

alias zconfig="vi ~/.dotfiles/.config/zsh/.zshrc"
alias nvimconfig="vi ~/.dotfiles/.config/nvim/lua/nsc"
alias dot="vi ~/.dotfiles"

alias tcli="transmission-cli"
