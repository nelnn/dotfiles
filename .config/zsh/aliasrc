# aliases
alias vi="nvim"
alias ls='ls -G'
alias mv="mv -i"
alias cp="cp -i"
alias tm="tmux"
alias cd="z"
alias mem="top -o mem" # Check memory usage
alias man="batman"

alias zconfig="vi ~/.dotfiles/.config/zsh/.zshrc"
alias nvimconfig="vi ~/.dotfiles/.config/nvim/lua"
alias dot="vi ~/.dotfiles"

alias tcli="transmission-cli"
