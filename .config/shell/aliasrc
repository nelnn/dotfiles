# aliases
alias v="nvim"
alias ls='ls -G'
alias mv="mv -i"
alias cp="cp -i"
alias tm="tmux"
alias cd="z"
alias mem="top -o mem" # Check memory usage
alias man="batman"
alias g="lazygit"
alias d="lazydocker"

alias dcu="docker compose up -d"
alias dcd="docker compose down"

# Edit config files
alias aliasconf="nvim ~/.dotfiles/.config/shell/aliasrc"
alias zconf="v ~/.dotfiles/.config/zsh/.zshrc"
alias nvimconf="v ~/.dotfiles/.config/nvim/lua"
alias dot="cd ~/.dotfiles"

alias tcli="transmission-cli"
alias ctags="/opt/homebrew/bin/ctags"
